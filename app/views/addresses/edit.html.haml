%h1 Edit Address

= link_to "Cancel", addresses_path

= form_for @address, url: "/addresses/#{@address.id}" do |f|

  Address:
  %br/
  = f.text_field :address_one, id: "gmaps-input-address", class: "form-control"

  = f.text_field :lat, id: "gmaps-output-latitude", readonly: true, class: "hide"
  = f.text_field :lng, id: "gmaps-output-longitude", readonly: true, class: "hide"
  %br/
  %br/

  #gmaps-canvas(style="width: 100%; height: 400px;")

  = submit_tag "Save"


:javascript
  window.current_address_lat = document.getElementById("gmaps-output-latitude").value;
  window.current_address_lng = document.getElementById("gmaps-output-longitude").value;
