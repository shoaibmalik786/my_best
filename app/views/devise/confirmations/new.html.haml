%h3 Resend confirmation instructions
%br

= form_for(resource, as: resource_name,
                     url: confirmation_path(resource_name),
                     html: { method: :post, class: "form-horizontal", role: "form" }) do |f|
  = devise_error_messages!

  .form-group
    = f.label :email, class: "col-lg-2 control-label"
    .col-lg-10
      = f.email_field :email, autofocus: true, class: "form-control", type: "email", placeholder: "email"

  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit "Resend confirmation instructions", class: "btn btn-default"

= render "devise/shared/links"
